datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id @default(uuid())
  idOauth String  @unique
  Items   Items[]
}

model Items {
  id        String   @id @default(uuid())
  item      String
  qtd       Float
  price     Float
  idOauth   String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  user User @relation(fields: [idOauth], references: [idOauth])
}
